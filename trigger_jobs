job1 
pipeline{
    agent {
        label{
            label "built-in"
            customWorkspace "/mnt/pk"
        } 
    }
        tools {
            jdk "jdk11"
            maven "maven3"
            
        } 
    
    stages{
        stage("clone"){
            steps{
                sh "rm -rf *"
               sh "git clone https://github.com/Shantanumajan6/project.git"
        
    }
}
        stage("build"){
            steps{
                
                sh "cd project && mvn clean install -DskipTests=true"
                sh "chmod -R 777 /mnt/pk/project/target/LoginWebApp.war"
                
                
}
}
        stage("deploy"){
            steps{
               
                sh "cp -r /mnt/pk/project/target/LoginWebApp.war /mnt"          #first create Dockerfile in /mnt
                sh "chmod -R 777 /mnt/LoginWebApp.war"
}
}
        stage("image"){
           
            steps{
                 script{
                   withDockerRegistry(credentialsId: '9f58046e-4069-41b3-bc0b-164a1082e2d1', toolName: 'docker') {
                           sh "docker build -t mytomcat:latest /mnt"
                           sh "docker tag mytomcat:latest suraj48088/mytomcat:latest"
                           sh "docker push suraj48088/mytomcat:latest"
}  
                 }
                
                
                 
}
}
stage("Trigger"){
            steps{
               
                build job: "CD_Pipeline" , wait: true
}
}

}
}

                                                 job2
pipeline{
    agent any
      
    stages{
        stage("dockerdeploy"){
            steps{
                script{
                   withDockerRegistry(credentialsId: '9f58046e-4069-41b3-bc0b-164a1082e2d1', toolName: 'docker') {
                           sh "docker run -d --name hfgjhgkj -p 8070:8080 suraj48088/mytomcat:latest"
                          
                 }
                 
    }
}
}
}
}

Dockerfile in mnt
FROM tomcat:9.0
CMD ["catalina.sh","run"]
COPY LoginWebApp.war /usr/local/tomcat/webapps
